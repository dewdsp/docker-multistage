FROM golang:1.14-alpine AS builder
RUN apk update && apk add --no-cache git ca-certificates && update-ca-certificates
RUN adduser -D -g '' appuser
WORKDIR /build
COPY ./app ./app
COPY ./cmd ./cmd
COPY ./web/app/dist ./web/app/dist
COPY go.mod go.sum ./
ENV GO111MODULE=on
RUN go mod download
RUN go mod verify
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -installsuffix cgo -ldflags '-extldflags "-static"' -o web-app cmd/main.go


FROM scratch
LABEL maintainer="name@example.com"
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=builder /etc/passwd /etc/passwd
COPY --from=builder /build .
USER appuser
EXPOSE 8080
CMD ["./web-app", "-http-port=8080", "-log-level=-1", "-log-time-format=2006-01-02T15:04:05.999999999Z07:00"] --v